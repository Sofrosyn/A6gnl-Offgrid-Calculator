<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.NotificationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content" style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:text="@string/notification"  android:id="@+id/text1" android:layout_marginTop="16dp"/>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent" app:layout_constraintTop_toBottomOf="@id/text1" android:layout_marginTop="8dp"
            android:layout_height="wrap_content" android:id="@+id/notification_fragment_recyclerview"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>