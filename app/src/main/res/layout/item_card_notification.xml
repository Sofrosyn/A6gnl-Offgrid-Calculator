<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:id="@+id/notification_item_card"
    android:layout_height="wrap_content" android:layout_marginHorizontal="8dp" android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent" android:padding="8dp"
        android:layout_height="wrap_content" android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content" android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" android:id="@+id/image" android:src="@drawable/notification"/>



        <LinearLayout
            android:layout_width="wrap_content" android:orientation="vertical"
            android:layout_height="wrap_content"
             android:layout_marginLeft="16dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/notification_item_title"
                android:text="@string/notification_title" android:textStyle="bold" android:textSize="20sp" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp"
                android:text="@string/notification_subtitle" android:textAlignment="textStart" android:textSize="15sp"
                android:id="@+id/notification_item_subtitle"/>

        </LinearLayout>

      </LinearLayout>

</com.google.android.material.card.MaterialCardView>