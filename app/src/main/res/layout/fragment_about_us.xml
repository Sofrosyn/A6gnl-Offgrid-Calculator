<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AboutUsFragment">


    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="match_parent">




        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tvVersion"
                android:layout_margin="20dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="A6GNL Solar Estimator v1.0"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_margin="20dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="A6GNLTM Suite of applications\n Is Developed by\n\nA6GNL TM  \n\n Visit www.a6gnl.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




            <TextView
                android:layout_margin="20dp"
                android:gravity="center" android:visibility="visible"
                android:textColor="@android:color/black"
                android:text="Developed By :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_margin="10dp"
                android:gravity="center" android:visibility="visible"
                android:textColor="@android:color/holo_purple"
                android:text="Le_Charmides"
                android:textStyle="italic"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />









        </LinearLayout>





    </LinearLayout>
</FrameLayout>