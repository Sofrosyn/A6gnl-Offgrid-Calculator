<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


  <com.synnapps.carouselview.CarouselView
      android:id="@+id/Fragment_home_carasoul"
      android:layout_width="match_parent"
      android:layout_marginTop="16dp"
      android:layout_marginHorizontal="16dp"
      android:layout_height="240dp"
      app:fillColor="#FFFFFFFF"
      app:pageColor="#00000000"
      app:radius="6dp"
      android:scaleY="1.0"
      android:scaleX="1.0"
      app:slideInterval="5000"
      app:strokeColor="#FFFFFFFF"
      app:strokeWidth="1dp"
      app:indicatorVisibility="invisible"


      />



   <ScrollView
       android:layout_width="match_parent" android:layout_below="@id/Fragment_home_carasoul" android:layout_marginTop="16dp"
       android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent" android:layout_centerInParent="true" android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content" android:orientation="vertical"
        >




        <com.google.android.material.card.MaterialCardView android:backgroundTint="@android:color/holo_green_dark" android:padding="4dp"
             android:layout_columnWeight="1" android:layout_marginRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/Fragment_home_inverter">
          <LinearLayout
              android:layout_width="match_parent" android:orientation="vertical"
              android:layout_height="match_parent" >


              <ImageView
                  android:layout_width="50dp" android:src="@drawable/electric_generator"
                  android:layout_height="50dp"  android:id="@+id/image1"
                  android:padding="8dp"/>

              <TextView
                  android:layout_width="wrap_content" android:text="Inverter System Estimator  " android:layout_marginTop="24dp" android:layout_marginLeft="8dp"
                  android:layout_height="wrap_content"  android:textStyle="bold" android:textSize="24sp" android:textColor="@android:color/white"/>


              <TextView
                  android:layout_width="wrap_content" android:text="Estimate the required components"  android:layout_marginLeft="8dp"
                  android:layout_height="wrap_content"   android:textSize="12sp" android:textColor="@android:color/white"/>



          </LinearLayout>


        </com.google.android.material.card.MaterialCardView>





        <com.google.android.material.card.MaterialCardView android:backgroundTint="@android:color/holo_purple"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" android:clickable="true" android:id="@+id/Fragment_trouble_shoot" android:layout_width="match_parent">
            <LinearLayout
                android:layout_width="match_parent" android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp" android:src="@drawable/solar_panel"
                    android:layout_height="50dp"  android:id="@+id/image3"
                            android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content" android:text="Trouble shoot" android:layout_marginTop="24dp" android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"  android:textColor="@android:color/white"
                    android:textStyle="bold" android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content" android:text="Self diagnose your inverter system"  android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"   android:textSize="12sp" android:textColor="@android:color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>





        <com.google.android.material.card.MaterialCardView android:backgroundTint="@android:color/darker_gray"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" android:clickable="true" android:id="@+id/Fragment_notification" android:layout_width="match_parent">
            <LinearLayout
                android:layout_width="match_parent" android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp" android:src="@drawable/solar_panel"
                    android:layout_height="50dp"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content" android:text="Notification" android:layout_marginTop="24dp" android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"  android:textColor="@android:color/white"
                    android:textStyle="bold" android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content" android:text="Get real time notification and tips"  android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"   android:textSize="12sp" android:textColor="@android:color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

















        <com.google.android.material.card.MaterialCardView android:backgroundTint="@android:color/background_light"
              android:layout_marginTop="16dp" android:layout_height="wrap_content" android:layout_width="match_parent"
            android:clickable="true" android:id="@+id/Fragment_home_about">
            <LinearLayout
                android:layout_width="match_parent" android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp" android:src="@drawable/about"
                    android:layout_height="50dp"  android:id="@+id/image4"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="wrap_content" android:text="About Us" android:layout_marginTop="24dp" android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"  android:textStyle="bold"
                    android:textSize="24dp" />

                <TextView
                    android:layout_width="wrap_content" android:text="Connect with Us "  android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"   android:textSize="14sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>





    </LinearLayout>
   </ScrollView>



</RelativeLayout>

</FrameLayout>